@using NJS_Chat.Helpers
@model NJS_Chat.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

@section styles{
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />*@

    <style type="text/css">
        #messageFrame {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: 70px;
        }
    </style>
}


<div id="pagewrap" style="padding: 10px">
    @using (Html.BeginForm("PostMessage", "Home", FormMethod.Post, new { @class = "form-inline" }))
    {
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.Session)
        <div class="form-group">
            @Html.TextBoxFor(model => model.Message, new{placeholder="Type a message here", autofocus="", style="width: 500px", autocomplete="off", type="text", @class="form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownListFor(model => model.To, Model.ToSelectItems, new{@class="form-control"})
            @*<select name="To" id="To" class="form-control">
                <option value="Everyone">Everyone</option>
                @foreach (var user in Global.User.UserQue)
                {
                    <option value="@user.Username">@user.Username</option>
                }
            </select>*@
        </div>

        <button class="btn btn-info">Send</button>
    }
</div>


<iframe id="messageFrame" width="100%" height="100%" frameborder="0" src="@Url.Action("Message", "Home")"></iframe>


